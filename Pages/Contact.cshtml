@page
@model ContactModel
<style>
input, textarea {
    min-width: 400px;
    width: 400px;
}
</style>
<h1>Contact Us</h1>
<form hx-post="/contact?handler=SubmitContact" hx-target="#result">
    @Html.AntiForgeryToken()
    <label for="name">Name:</label><br />
    <input type="text" id="name" name="name" placeholder="Your Name" required minlength="4" maxlength="6" hx-validate="true" /><br />
    <label for="email">Email:</label><br />
    <input type="email" id="email" name="email" placeholder="Your Email" required /><br />
    <label for="message">Message:</label><br />
    <textarea name="message" id="message" placeholder="Your Message" required minlength="20"></textarea><br />
    <button type="submit">Send</button>
</form>
<div id="result"></div>